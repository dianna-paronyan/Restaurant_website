            <a class="nav-link" href="./about.html">Մեր Մասին</a>
          </li>

        </ul>

      </div>
    </div>
  </nav>

  <main>
    <section class="heading">
      <h1><a href="/pizza">
          <%= title %>
        </a></h1>
      <hr>
    </section>

    <section class="foods">
      <div class="content">

        <% for(let i=0; i<pizzas.length; i++) {%>
          <div class="card">
            <div class="img">
              <img class="card-img-top" src="<%= pizzas[i].image %>" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">
                  <%= pizzas[i].name %>
                </h5>
                <a href="#" class="btn btn1">
                  <%= pizzas[i].price %>
                </a>
                <button type="button" class="btn btn2" data-toggle="modal" data-target="<%= pizzas[i].dataTarget %>">
                  <%= pizzas[i].more %>
                </button>
              </div>
            </div>
          </div>
          <div class="modal fade" id="<%= pizzas[i].modalId %>" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <div class="box">
                    <img src="<%= pizzas[i].image %>" alt="" width="100px">
                    <h5 class="modal-title" id="exampleModalLabel">
                      <%= pizzas[i].modalTitle %>
                    </h5>
                  </div>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <h6>Բաղադրությունը</h6>
                  <%= pizzas[i].modalText %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-primary" data-dismiss="modal">
                    <%= pizzas[i].closeBtn %>
                  </button>

                </div>
              </div>
            </div>
          </div>

          <% } %>
      </div>
    </section>
  </main>

  <section class="news py-5" id="news">
    <div class="container">
      <div class="row">
        <div class="col-9 m-auto text-center">
          <h2 style="color: #fff; margin-top: 15px;">ՄԵՐ ԿՈՆՏԱԿՏՆԵՐԸ</h2>
        </div>
      </div><br>
      <div class="row py-5">

        <div class="map"></div>

        <div class="col-3" style="margin-top: 50px;">
          <h6 class="pb-3">Հասցե։ Գրիգոր Լուսավորիչ փ, ք.Երևան</h6>
          <p>Աշխ. ժամեր։ 09:00am - 12:00am</p>
          <p>Հեռախոս։ +374 11 12 13</p>
        </div>

        <div class="col-3" style="margin-top: 50px;">
          <h6 class="pb-3">SOCIAL MEDIA</h6>
          <span><a href="https://www.facebook.com/" class="socialMedia" target="_blank"><i
                class="fab fa-facebook"></i></a></span>
          <span><a href="https://www.instagram.com/" class="socialMedia" target="_blank"><i
                class="fab fa-instagram"></i></a></span>
          <span><a href="https://twitter.com/" class="socialMedia" target="_blank"><i
                class="fab fa-twitter"></i></a></span>
          <span><a href="https://vk.com/" class="socialMedia" target="_blank"><i class="fab fa-vk"></i></a></span>
        </div>
      </div><br><br>

      <div class="row">
        <div class="col-9 m-auto text-center">
          <p class="copy"></p>
        </div>
      </div>
    </div>
  </section>

  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyChvYKD6szQ9sWJ7IKqxhDKXvMu-RsMP6I&callback=initMap&libraries=&v=weekly"
    async>
  </script>
  <script src="./main.js"></script>
  <script src="https://kit.fontawesome.com/e3325bedec.js" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous">
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous">
  </script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"

  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Lobster&family=Open+Sans&family=Roboto:wght@100&family=Rubik&display=swap"
    rel="stylesheet">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="pasta.css">
  <link rel="icon" href="./images/icon2.jpg" type="img/jpg">
  <title>Պաստա</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand" href="#">
        <a href="./index.html"><img src="./images/logo_03.png" alt="..." height="60"></a>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="./index.html" id="home">Հիմնական<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">
              Մենյու
            </a>
            <div class="dropdown-menu" id="menu" aria-labelledby="navbarDropdownMenuLink">
              <a class="dropdown-item" id="dropitemsmenu" href="./kitchen.html">Գլխավոր մենյու</a>
              <a class="dropdown-item breakfast" id="dropitemsmenu" href="/breakfast">Նախաճաշ</a>
              <a class="dropdown-item" id="dropitemsmenu" href="/appetizer">Նախուտեստ</a>
              <a class="dropdown-item" id="dropitemsmenu" href="/salad">Աղցաններ</a>
              <a class="dropdown-item" id="dropitemsmenu" href="/soup">Ապուրներ</a>
              <a class="dropdown-item" id="dropitemsmenu" href="/hotMeal">Տաք ուտեստներ</a>
              <a class="dropdown-item" id="dropitemsmenu" href="/pasta">Պաստա</a>
              <a class="dropdown-item" id="dropitemsmenu" href="/pizza">Պիցցա</a>
              <a class="dropdown-item" id="dropitemsmenu" href="/burger">Բուրգեր</a>
              <a class="dropdown-item" id="dropitemsmenu" href="/dessert">Աղանդեր</a>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">
              Բար
            </a>
            <div class="dropdown-menu" id="menubar" aria-labelledby="navbarDropdownMenuLink">
              <a class="dropdown-item" id="dropitemsbar" href="./bar.html">Գլխավոր բար</a>
              <a class="dropdown-item" id="dropitemsbar" href="/coffee">Սուրճ</a>
              <a class="dropdown-item" id="dropitemsbar" href="/tea">Թեյ</a>
              <a class="dropdown-item" id="dropitemsbar" href="/juice">Հյութեր</a>
              <a class="dropdown-item" id="dropitemsbar" href="/lemonad">Լիմոնադներ</a>
              <a class="dropdown-item" id="dropitemsbar" href="/coctail">Կոկտեյներ</a>
              <a class="dropdown-item" id="dropitemsbar" href="/alcoholicBaverage">Ալկոհոլային Խմիչքներ</a>
            </div>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/reservation">Ամրագրել սեղան</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#news">Կապ</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="./about.html">Մեր Մասին</a>
          </li>

        </ul>

      </div>
    </div>
  </nav>

  <main>
    <section class="heading">
      <h1><a href="/pasta">
          <%= title %>
        </a></h1>
      <hr>
    </section>

    <section class="foods">
      <div class="content">

        <% for(let i=0; i<pastas.length; i++) {%>
          <div class="card">
            <div class="img">
              <img class="card-img-top" src="<%= pastas[i].image %>" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">
                  <%= pastas[i].name %>
                </h5>
                <a href="#" class="btn btn1">
                  <%= pastas[i].price %>
                </a>
                <button type="button" class="btn btn2" data-toggle="modal" data-target="<%= pastas[i].dataTarget %>">
                  <%= pastas[i].more %>
                </button>
              </div>
            </div>
          </div>
          <div class="modal fade" id="<%= pastas[i].modalId %>" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <div class="box">
                    <img src="<%= pastas[i].image %>" alt="" width="100px">
                    <h5 class="modal-title" id="exampleModalLabel">
                      <%= pastas[i].modalTitle %>
                    </h5>
                  </div>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <h6 class="text">Բաղադրությունը</h6>
                  <%= pastas[i].modalText %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-info" data-dismiss="modal">
                    <%= pastas[i].closeBtn %>
                  </button>

                </div>
              </div>
            </div>
          </div>

          <% } %>
      </div>
    </section>
  </main>

  <section class="news py-5" id="news">
    <div class="container">
      <div class="row">
        <div class="col-9 m-auto text-center">
          <h2 style="color: #fff; margin-top: 15px;">ՄԵՐ ԿՈՆՏԱԿՏՆԵՐԸ</h2>
        </div>
      </div><br>
      <div class="row py-5">

        <div class="map"></div>

        <div class="col-3" style="margin-top: 50px;">
          <h6 class="pb-3">Հասցե։ Գրիգոր Լուսավորիչ փ, ք.Երևան</h6>
          <p>Աշխ. ժամեր։ 09:00am - 12:00am</p>
          <p>Հեռախոս։ +374 11 12 13</p>
        </div>

        <div class="col-3" style="margin-top: 50px;">
          <h6 class="pb-3">SOCIAL MEDIA</h6>
          <span><a href="https://www.facebook.com/" class="socialMedia" target="_blank"><i
                class="fab fa-facebook"></i></a></span>
          <span><a href="https://www.instagram.com/" class="socialMedia" target="_blank"><i
                class="fab fa-instagram"></i></a></span>
          <span><a href="https://twitter.com/" class="socialMedia" target="_blank"><i
                class="fab fa-twitter"></i></a></span>
          <span><a href="https://vk.com/" class="socialMedia" target="_blank"><i class="fab fa-vk"></i></a></span>
        </div>
      </div><br><br>

      <div class="row">
        <div class="col-9 m-auto text-center">
          <p class="copy"></p>
        </div>
      </div>
    </div>
  </section>

  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyChvYKD6szQ9sWJ7IKqxhDKXvMu-RsMP6I&callback=initMap&libraries=&v=weekly"
    async></script>
  <script src="./main.js"></script>
  <script src="https://kit.fontawesome.com/e3325bedec.js" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</body>

</html>





